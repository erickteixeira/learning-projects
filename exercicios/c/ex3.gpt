algoritmo maior_de_tres;

variáveis
    a, b , c : real;
fim-variáveis

início
    imprima("Digite um valor para a: ");
    a := leia();
    imprima("Digite um valor para b: ");
    b := leia();
    imprima("Digite um valor para c: ");
    c := leia();
    se a>b então
        se a>c então 
            imprima("O maior valor dos três é: ", a);        
        senão 
            imprima("O maior valor dos três é: ", c);
        fim-se
    senão
        se b>c então
            imprima("O maior valor dos três é: ", b);
        senão
            imprima("O maior valor dos três é: ", c);
        fim-se
    fim-se
fim    
