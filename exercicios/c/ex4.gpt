algoritmo media;

variáveis
    f, n1, n2, n3, m, mf : real;
fim-variáveis

início
    imprima("Informe o numero de faltas: ");
    f := leia();
    se f<=18 então
        imprima("Informe a primeira nota: ");
        n1 := leia();
        imprima("Informe a segunda nota: ");
        n2 := leia();
        m:=(n1 + n2)/2.0;
        se m>=7 então 
            imprima("Parabens voce passou direto");
        senão
            imprima("Informe a nota final: ");
            n3 := leia();
            mf:=m + n3;
        fim-se
        se mf<10 então
            imprima("Reprovado na final");
        senão
            imprima("Aprovado na final");
        fim-se
    senão
        imprima("Reprovado por falta");
    fim-se
fim
